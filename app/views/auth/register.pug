extends ../shared/master

block content
    div.row
        form.col.s12(action="/auth/register", method="post")
            div.row
                h2
                    span.col.s12
                    | Create an account
            div.row
                div.input-field.col.s6
                    input.validate(type="text", name="first_name", placeholder="First Name")
                    label(for="first_name")
                        | First Name
                div.input-field.col.s6
                    input.validate(type="text", name="last_name", placeholder="Last Name")
                    label(for="last_name")
                        | Last Name
            div.row
                div.input-field.col.s6
                    input.validate(type="email", name="email", placeholder="Email")
                    label(for="email")
                        | Email Address
                div.input-field.col.s6
                    input.validate(type="password", name="password", placeholder="Password")
                    label(for="password")
                        | Password
            div.row
                button.btn(type="submit")
                    | Create an account